pipeline {
    agent any

    triggers {
    pollSCM("* * * * *")
    }



    stages {
        stage("Check versions"){
            steps{
               echo "Checking versions"
               sh "docker --version"
            }
        }

        stage("Build"){
            steps{
                echo "Building"
                    //sh "dotnet build"
            }
        }
        
        stage("k6 performance testing"){
             steps{
                echo "Starting Docker k6 image"
                dir("tests"){
                    sh "docker run --rm -i grafana/k6 run - <performance-test.js"
                }
            }
        }
      
    }
}